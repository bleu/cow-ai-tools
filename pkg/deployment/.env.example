# Project Configuration
PROJECT_PREFIX=op-ai-tools-prod
ENV=production

# Database Configuration - Neon Postgres
# Get this from your Neon dashboard: https://console.neon.tech
# Format: postgresql://user:password@host/database?sslmode=require
DATABASE_URL=postgresql://user:password@ep-xxxx.region.aws.neon.tech/neondb?sslmode=require

# API Configuration
API_PORT=9090
API_CPU_LIMIT=4
API_MEMORY_LIMIT=4G

# Application Secrets
FLASK_API_SECRET_KEY=your_flask_secret_key_here
SECRET=your_secret_key_here

# Error Tracking
HONEYBADGER_API_KEY=your_honeybadger_api_key_here

# Analytics
POSTHOG_API_KEY=your_posthog_api_key_here

# AI Services (at least one required)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
VOYAGE_API_KEY=your_voyage_api_key_here
GROQ_API_KEY=your_groq_api_key_here

# Data Sources
AGORA_BEARER_TOKEN=your_agora_token_here

# External Resources (set to true if using existing network/services)
EXTERNAL_RESOURCES=false
